{
  "name": "que-management",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron": "electron .",
    "electron:dev": "concurrently \"cross-env NODE_ENV=development next dev\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "cross-env NODE_ENV=production next build && electron-builder",
    "electron:build:win": "cross-env NODE_ENV=production next build && electron-builder --win"
  },
  "build": {
    "appId": "com.quemanagement.app",
    "productName": "Queue Management System",
    "directories": {
      "output": "dist",
      "buildResources": "public"
    },
    "files": [
      "electron/**/*",
      "package.json",
      "next.config.mjs",
      "node_modules/next/**/*",
      "node_modules/react/**/*",
      "node_modules/react-dom/**/*",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/*.md",
      "!node_modules/**/LICENSE*"
    ],
    "extraResources": [
      {
        "from": ".next/standalone",
        "to": ".next/standalone"
      },
      {
        "from": ".next/static",
        "to": ".next/standalone/.next/static"
      },
      {
        "from": "public",
        "to": ".next/standalone/public"
      }
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/favicon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "perMachine": false
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.0",
    "axios": "^1.13.2",
    "docx": "^9.5.1",
    "file-saver": "^2.0.5",
    "jspdf": "^3.0.4",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.554.0",
    "next": "^16.0.7",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-icons": "^5.5.0",
    "react-redux": "^9.2.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "^16.0.7",
    "tailwindcss": "^4",
    "wait-on": "^9.0.3"
  }
}
